{
  "manifest_version": 2,

  "name": "3-Sentences",
  "description": "Summarize a TLDR webpage to three sentences.",
  "version": "0.1.0",

  "browser_action": {
    "default_icon": "dist/assets/icon.png",
    "default_popup": "dist/views/popup.html"
  },

  "background": {
    "scripts": [
      "dist/scripts/eventPage.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "dist/scripts/getHtml.js"
      ],
      "all_frames": true
    }
  ],

  "permissions": [
    "tabs", 
    "<all_urls>"
  ]
}
